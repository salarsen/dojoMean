<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title>Epic Button Game</title>
      <!-- <link rel="stylesheet" href="style.css"> -->
      <script   src="http://code.jquery.com/jquery-2.2.4.js"   integrity="sha256-iT6Q9iMJYuQiMWNd9lDyBUStIq/8PuOW33aOqmvFpqI="   crossorigin="anonymous"></script>
      <script type="text/javascript" src="/socket.io/socket.io.js"></script>
      <script>
         $(document).ready(function(){
            var socket = io.connect();
            $('#update').on('click',function(){
               socket.emit('increase_count', {reason : 'increase the button count'});
            });
            $('#reset').on('click',function(){
               socket.emit('reset_count',{reason : 'reset the button count'});
            });
            socket.on('server_response',function(data){
               $('h1').html(data.response);
            });
         });
      </script>
   </head>
   <body>
      <div class="container">
         <h1></h1>
         <p>Push the button to update the count!</p>
         <button type="button" name="update" id="update">Push the epic button</button>
         <button type="button" name="reset" id="reset">Reset count</button>
      </div>
   </body>
</html>
